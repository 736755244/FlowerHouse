/*主容器*/  
.stepper {  
    width: 120px;  
    height: 26px;  
    /*给主容器设一个边框*/  
    border: 1px solid #ccc;  
    border-radius: 3px;  
    margin:0 auto;  
}  
  
/*加号和减号*/  
.stepper span {  
    width: 29px;  
    line-height: 26px;  
    text-align: center;  
    float: left;  
    background: #eee;
}  
  
/*数值*/  
.stepper input {  
    width: 60px;  
    height: 26px;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 14px;  
    /*给中间的input设置左右边框即可*/  
    border-left: 1px solid #ccc;  
    border-right: 1px solid #ccc;  
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
  
/*禁用样式*/  
.stepper .disabled{  
    color: black;  
    background: #eee;
}  