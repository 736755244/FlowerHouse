.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}  
.toast_content {  
  width: 35%;  
  padding: 20rpx;  
  background: rgba(0, 0, 0, 0.7);  
  border-radius: 20rpx;  
}  
.toast_content_text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
  white-space: normal;
  word-break: break-all;
  word-wrap: break-word;
} 
.toast_content_img{
  width: 100%;
  height: 30px;
  margin-bottom: 5px;
}
