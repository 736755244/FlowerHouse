.card-bg {
  width: 100%;
  height: 110px;
  background-color: #F5B43E;
  clip-path: ellipse(50% 50% at 50% 0);
  position: absolute;
}
/* 上层卡片 start */
.card-intro {
  width: 90%;
  height: 175px;
  margin: 15px auto 20px;
  background-color: #fff;
  position: relative;
  border-radius: 5px;
  box-shadow: 0 2px 20px 2px rgba(150,150,150,.2);
}
.intro-content {
  width: 100%;
  height: 130px;
  padding: 20px 15px 0;
  border-bottom: 1px dashed #eee;
  box-sizing: border-box;
  position: relative;
}
.firm-name {
  font-size: 16px;
  margin-bottom: 16px;
  color: #999;
}
.name {
  font-size: 22px;
  margin-bottom: 5px;
}
.job {
  font-size: 12px;
  color: #999;
}
.head-icon {
  width: 46px;
  height: 46px;
  position: absolute;
  right: 15px;
  top: 25px;
  border-radius: 6px;
  overflow: hidden;
}
.head-icon image{
  width: 100%;
  height: 100%;
}
.intro-footer {
  height: 45px;
  line-height: 45px;
  padding: 0 15px;
  position: relative;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
}
.intro-footer span {
  font-size: 13px;
  color: #999;
  width: 90%;
}
.intro-footer image{
  width: 25px;
  height: 25px;
}
.qr-code {
  position: absolute;
  width: 22px;
  height: 22px;
  right: 15px;
  top: 12px;
  text-align: center;
}
/* end */

.tab-h{
  height: 45px;
  width: 89%; 
  overflow: hidden;
  line-height: 43px;
  font-family: 微软雅黑,'microsoft yahei',宋体,新宋体,sans-serif;
  font-size: 14px;
  white-space: nowrap;
  padding: 0 20px;
}
.tab-item{
  margin:0 10px;
  padding: 0 10px;
  display: inline-block;
  color: #666;
  font-size: 13px;
  transition: transform .2s ease,-webkit-transform .2s ease;
}
.tab-item.active{
  position: relative;
  color: #333;
  transform: scale(1.2);
}
.tab-content{
  padding: 0 20px 20px 20px;
  height: 250px;
  margin: 0 20px;
}
.scoll-h{
  font-size: 13px;
}
.con_info{
  position: relative;
  height: 50px;
  line-height: 50px;
  display: flex;
  border-bottom: 1px dashed #eee;
}
.con_info .info{
  width: 90%;
}
.con_info .icon{
  width: 10%;
}
.icon image{
  width: 20px;
  height: 20px;
}

/*  */
.footer_flex{
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 49px;
  border-top: 1px solid #eee;
}
.footer_flex >div{
  width: 20%;
  font-size: 12px;
  color: #888;
  text-align: center;
}
.footer_flex >div image{
  width: 20px;
  height: 20px;
}
.footer_flex button{
  width: 45%;
  background: #F5B43E;
  color: #fff;
  height: 40px;
  line-height: 40px;
  border-radius: 20px;
  font-size: 13px;
}