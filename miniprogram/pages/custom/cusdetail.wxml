<view>
  <view class="section" style="height:{{Height}}px;overflow-y:scroll;">
    <view class="header">
      <text>店铺环境</text>
      <image src="{{iconpath}}share.png"></image>
    </view>
  
    <view>
      <view class="img_item" wx:for="{{imgList}}" wx:key="*this">
        <image src="{{item.filePath}}"></image>
      </view>
    </view>
  </view>

  <view>
    <div class="footer_flex">
      <div>
        <image src="{{iconpath}}phone.png"></image>
        <text>\n电话</text>
      </div>
      <div bindtap="backhome">
        <image src="{{iconpath}}map.png"></image>
        <text>\n地址</text>
      </div>
      <button>马上咨询</button>
    </div>
  </view>
</view>