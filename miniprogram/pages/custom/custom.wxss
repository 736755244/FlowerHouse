.section{
  background: #eee;
}
.m-t-10{
  margin-top: 10px;
}
.top_img image{
  width: 100%;
  height: 200px;
}
.content{
  background: #fff;
  padding: 30px 20px;
}
.con_h{
  width: 100%;
  margin-bottom: 10px;
}
.con_flex{
  display: flex;
  font-size: 13px;
  color: #666;
  justify-content: center;
  align-items: center;
  margin-bottom: 15px;
}
.con_flex .half{
  width: 50%;
}
.con_flex image{
  width: 130px;
  height: 130px;
}
.p-20{
  padding: 10px 20px;
  background: #fff;
  position: relative;
}
.p-20 image{
  width: 100%;
  height: 200px;
}
.xh_abs{
 position: absolute;
 left: 12%;
 top: 25%;
 width: 50%;
}
.xh_abs text:nth-child(2){
  font-size: 12px;
  color: #666;
}
.xh_abs button{
  border: 1px solid green;
  text-align: center;
  font-size: 13px;
  width: 50%;
  background: transparent;
  margin: 0 0;
}
.input_info{
  margin-bottom: 15px;
}
.item-must {
  color: red;
  vertical-align: middle;
  margin-right: 5px;
  display: inline-block;
}
.input_info input,.input_info textarea {
  width: 100%;
  background: #f7f7f7;
  border-color: #f7f7f7;
  color: #353535;
  font-size: 14px;
  padding: 10px;
}
.input_info input{
  /* height: 40px; */
}
.input_info textarea{
  min-height: 100px;
}
.input_info button{
  width: 80%;
  color: #fff;
  background: #F5B43E;
  font-size: 14px;
}