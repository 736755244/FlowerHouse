div{
  display: block;  
}
.bg_border{
  background: #eee;
}
.news{
  background: #fff;
}
.news_item{
  display: flex;
  margin: 0 12px;
  padding: 15px 0 15px 15px;
  border-bottom: 1px solid #e3e3e3;
  justify-content: space-between
}
.news_item image{
   border-radius: 5px;
  width: 30%;
  height: 60px;
}
.short_info{
  width: 78%;
  margin-right: 2%;
}
.info_title{
  font-size: 14px;
  font-weight: bold;
  color: #000;
  margin-bottom: 5px;
}
.info_sub{
  font-size: 12px;
  color: #888;
  margin-bottom: 5px;
}
.info_date{
  font-size: 12px;
  color: #888;
}