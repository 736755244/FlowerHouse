div{
  display: block;
}
.bg_border{
  padding: 15px;
  overflow-y: scroll;
}
.new_header .header_title{
  font-size: 16px;
  font-weight: bold;
  color: #000;
  margin-bottom: 8px;
}
.new_header .header_sub{
  font-size: 12px;
  color: #888;
  margin-bottom: 20px;
}
.news_content{
  font-size: 14px;
  color: #888;
}
.news_content text{
  display: block;
  margin-bottom: 10px;
}
.news_share{
  height: 40px;
  text-align: center;
  position: absolute;
  bottom: 0;
  overflow: hidden;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 10px 0 rgba(0,0,0,.1);
}
.news_share image{
  width:25px;
  height: 20px;
}