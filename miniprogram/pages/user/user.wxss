/* start */
#readyToLogin .header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}
#readyToLogin .header image {
  width: 200rpx;
  height: 200rpx;
}
#readyToLogin .content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}
#readyToLogin .content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}
#readyToLogin .bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}
/* end */
.user-header {
  width: 120%;
  height: 160px;
  background: #F5B43E;
  position: relative;
  left: -10%;
  border-bottom-left-radius: 45%;
  border-bottom-right-radius: 45%;
  overflow: hidden;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #fff;
  font-size: 13px;
}
.header_img{
  width: 60px;
  height: 60px;
  margin-bottom: 10px;
}
.header_img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.submit{
  margin-bottom: 20px;
}
/*  */
.user_content{
  position: relative;
  top:-55px;
}
.order_info{
  background: #fff;
  margin: 20px;
  width: 90%;
  border-radius: 5px;
  padding-bottom: 1px;
}
.all_order{
  height: 40px;
  display: flex;
  margin: 10px;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #eee;  
  font-size: 14px;
}
.all_order text{
  width: 90%;
}
.all_order image{
  width: 20px;
  height: 20px;
}
.all_type{
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 12px;
  color: #666;
  margin: 15px 0px;
}
.all_type >div{
  width: 25%;
  position: relative;
}
.all_type >div>span{
  width:18px;
  height: 18px;
  border:1px solid #F5B43E;
  border-radius: 50%;
  position: absolute;
  right: 20px;
  top: -5px;
  background: #fff;
  color: #F5B43E;
  text-align: center;
  line-height: 20px;
  font-size: 12px;
}
.all_type image{
  background: #F5B43E;
  width: 25px;
  height: 25px;
}
.mes_info{
  width: 90%;
  background: #fff;
  border-radius: 5px;
  margin: 20px;
  /* padding: 0 0 10px; */
}
.news_header{
  margin: 0 10px;
  border-bottom: 1px solid #eee;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
}
.news_content{
  margin: 0 10px 10px;
  font-size: 13px;
}
.news_item{
  border-bottom: 1px solid #eee;
  padding: 10px 0;
}
.sub{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
}
.sub image{
  height: 55px;
  width: 20%;
}
.sub_info{
  width: 80%;
  background: #eee;
  height: 55px;
  vertical-align: middle;
  padding-left: 8px;
}
.sub_info view:first-child{
  font-size: 14px;
  color: #333;
  margin-top: 8px;
}
.sub_info view:nth-child(2){
  margin-top: 2px;
  font-size: 12px;
  color: #888;
}
.comment{
  background: #fff;
  width: 90%;
  margin: 10px;
}
.my_info{
  background: #fff;
  width: 90%;
  margin: 20px;
  border-radius: 5px;
  padding: 10px 0;
  font-size: 13px;
}
.my_info image{
  width: 16px;
  height: 16px;
  margin-right: 10px;
}
.my_item{
  padding: 10px;
  display: flex;
}
.my_item text{
  width: 90%;
}

/*  */
.view-more{
  font-size: 12px;
  color: #888;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px 0;
}
.view-more image{
  width: 11px;
  height: 6px;
  margin-right: 10px;
}